                          </div>
                          <div>
                            <div class="float-left">
                              <div class="btn-group h-35" role="group">
                                <button type="button" class="btn btn-grey">
                                  <span class="glyphicon glyphicon-step-backward" aria-hidden="true" id="<%= widget.id %>"></span>
                                </button>
