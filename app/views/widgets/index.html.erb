<h1>Widgets</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Active</th>
      <th>Knx module</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @widgets.each do |widget| %>
      <tr>
        <td><%= widget.id %></td>
        <td><%= widget.name %></td>
        <td><%= widget.active %></td>
        <td><%= widget.knx_module_id %></td>
        <td><%= widget.room_id %></td>
        <% if can? :read, widget %>
          <td><%= link_to 'Show', widget %></td>
        <% end %>
        <% if can? :update, widget %>
          <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
        <% end %>
        <% if can? :destroy, widget %>
          <td><%= link_to 'Destroy', widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, @widgets %>
  <%= link_to 'New Widget', new_widget_path %>
<% end %>
