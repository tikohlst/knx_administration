<div class="row">
  <div class="col">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="row mb-2">
        <div class="col">
          <%= link_to :back, class: "btn btn-secondary" do %>
            <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
          <% end %>
        </div>
      </div>

      <div class="row mb-2">
        <div class="col">
          <div class="card">
            <h3 class="card-header">
              <%= t 'views.account' %>
            </h3>
            <div class="card-block">
              <div class="form-group row">
                <label class="col-sm-4 col-form-label">
                  <%= t 'views.username' %>
                </label>
                <div class="col-sm-8">
                  <%= f.text_field :username, class: "form-control" %>
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-4 col-form-label">
                  <%= f.label :current_password %>
                </label>
                <div class="col-sm-8">
                  <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-4 col-form-label">
                  <%= t 'views.new_password' %>
                </label>
                <div class="col-sm-8">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-4 col-form-label">
                  <%= f.label :password_confirmation %>
                </label>
                <div class="col-sm-8">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-4 col-form-label">
                  <%= t 'views.language' %>
                </label>
                <div class="col-sm-8">
                  <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-secondary <% if resource.language == "en" %>active<% end %>">
                      <%= flag_icon(:gb, id: 'gb-flag') %>
                      <%= f.radio_button :language, "en" %>
                    </label>
                    <label class="btn btn-secondary <% if resource.language == "de" %>active<% end %>">
                      <%= flag_icon(:de, id: 'de-flag') %>
                      <%= f.radio_button :language, "de" %>
                    </label>
                  </div>
                </div>
              </div>

              <div class="form-group row">
                <div class="col">
                  <%= link_to t('views.destroy_account'), registration_path(resource_name), method: :delete, data: { confirm: t('views.sure') }, class: "btn btn-danger" %>
                </div>
                <div class="col">
                  <div class="actions float-right">
                    <%= f.submit t('views.update'), class: "btn btn-success" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
