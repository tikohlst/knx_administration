<div class="card mb-2">
  <h2 class="card-header text-left text-sm-center"><%= t 'views.login' %></h2>
  <div class="card-block">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <br>
      <div class="form-group row">
        <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3">
          <%= f.text_field :username, placeholder: (t ('views.username')), class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3">
          <%= f.password_field :password, autocomplete: "off", placeholder: (t ('views.password')), class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="form-group row">
        <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
      <% end %>

      <div class="form-group row">
        <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3">
          <div class="actions">
            <%= f.submit t('views.to_login'), class: "btn btn-primary btn-block btn-lg" %>
          </div>
        </div>
      </div>
      <br>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>