var render;
var currentSort = $('.navbar-brand > .btn-group.btn-group-toggle > .btn.btn-outline-secondary.mb-0.active').text().replace(/\s/g,'');
switch(currentSort) {
    case "ID":
        render = "<%= escape_javascript(render partial: 'sort_by_ids', locals: {users: @users }) %>";
        break;
    case "Benutzername":
    case "Username":
        render = "<%= escape_javascript(render partial: 'sort_by_usernames', locals: {users: @users }) %>";
        break;
    case "Rolle":
    case "Role":
        render = "<%= escape_javascript(render partial: 'sort_by_roles', locals: {users: @users }) %>";
        break;
}
$('#table_users > tbody').html(render);